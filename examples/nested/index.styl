body {
  margin: 0;
  padding: 0;
  background: #F5F6F7;
}


#main {
  position: absolute;
  overflow: hidden;
  top: 10px;
  left: 10px;
  right: 10px;
  bottom: 10px;
}


.p-TabBar {
  min-height: 24px;
}


.p-TabBar-content {
  bottom: 1px;
  > .p-Tab {
    font: 12px Helvetica, Arial, sans-serif;
    height: 21px;
    padding: 0px 10px;
    background: #E5E5E5;
    border: 1px solid #C0C0C0;
    border-bottom: none;
    &.p-mod-selected {
      height: 24px;
      background: white;
      transform: translateY(1px);
    }
    &:hover:not(.p-mod-selected) {
      background: #F0F0F0;
    }
    > span {
      line-height: 21px;
    }
  }
}


.p-TabBar-footer {
  display: block;
  height: 1px;
  background: #C0C0C0;
}


.p-TabPanel {
  padding-right: 2px;
  padding-bottom: 2px;
}


.p-TabPanel > .p-StackedPanel {
  padding: 10px;
  background: white;
  border: 1px solid #C0C0C0;
  border-top: none;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
}


.content {
  border: 1px solid black;
  min-width: 50px;
  min-height: 50px;
}


.red {
  background: #E74C3C;
}


.yellow {
  background: #F1C40F;
}


.green {
  background: #27AE60;
}


.blue {
  background: #3498DB;
}
